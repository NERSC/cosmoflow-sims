#!/bin/bash -l

#SBATCH --nodes=4 --account nstaff --time=18:00   # takes 12 min wall time
#SBATCH --qos=regular -J uni-reg 
#-SBATCH --qos=debug --time=18:00 -J univ-dbg
#-SBATCH --qos=premium -J univ-pr
#SBATCH  -C haswell  

#SBATCH --array=9-9

arrIdx=${SLURM_ARRAY_TASK_ID}

coreN='cosmoUniverse2b/'${SLURM_ARRAY_JOB_ID}
codeList=" makeOneUniverse.sh *Music*.sh rdMeta.py pycola-OmSiNs-jan.py projectNBody.py  ics_template.conf pack_hd5_Pk."py
date
echo SLURM_CLUSTER_NAME=$SLURM_CLUSTER_NAME  numNodes=$SLURM_NNODES
#env|grep SLURM

srcDir=`pwd`
wrkDir=$CSCRATCH/${coreN}-${arrIdx}
