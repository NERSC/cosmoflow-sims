cp -rp $codeList $wrkDir
cd  $wrkDir 
echo PWD=`pwd` 
ls -l  $dataH5
./prepMusic_4parC.sh $SLURM_NNODES ./

echo 'U: PWD2 '`pwd`
./rdMeta.py

echo M_start-`date`
srun --label ./makeOneUniverse.sh
echo M_done-`date`
